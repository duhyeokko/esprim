{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "jsx": "preserve",
    "sourceMap": true,
    "rootDir": "./",
    "noEmit": true,
    "strict": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
